float a = 0; 
float b = 0; 


void setup () {
  size(800, 600); //canvas size
  smooth();
}

void draw () {
  background(0); 
  float x = map(tan(a), -PI/2, PI/2, 0, width);
  float y = map(tan(b), -10, 100, 0, height); 
  //line(width/2, 0, x, height/2);
  ellipse(x, y, 30, 30);
  a += 0.0011;
  b += 0.02;
}
